<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/black">
    <!-- 游닞 Cuadro de c치mara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/pvcamera"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="#000"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutIconos"/>

    <!-- Tus botones -->
    <LinearLayout
        android:id="@+id/layoutIconos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/layoutBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pvcamera">
        <!-- Bot칩n galer칤a -->
        <ImageButton
            android:id="@+id/btnGaleria"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_circle"
            android:contentDescription="Abrir galer칤a"
            android:scaleType="centerInside"
            android:src="@drawable/ic_galeria"
            app:tint="@color/white" />
        <!-- Bot칩n c치mara (m치s grande) -->
        <ImageButton
            android:id="@+id/btnCamara"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_circle"
            android:contentDescription="Abrir c치mara"
            android:scaleType="centerInside"
            android:src="@drawable/ic_camera"
            app:tint="@color/white" />
        <!-- Bot칩n l치mpara -->
        <ImageButton
            android:id="@+id/btnLampara"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_circle"
            android:contentDescription="Encender linterna"
            android:scaleType="centerInside"
            android:src="@drawable/ic_lampara"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/btnEscanearBarras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/purple_700"
            android:text="Escanear c칩digo de barras"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btnEscanearQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="Escanear c칩digo QR"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>